-- 사번, 이름, 연봉 조회
SELECT *
FROM employees e
JOIN salaries s
ON e.emp_no = s.emp_no
WHERE s.to_date = '9999-01-01';

-- 사번, 이름, 직무 조회 (현재 재직중인)
SELECT e.emp_no, first_name, title
FROM employees e
JOIN titles t
ON e.emp_no = t.emp_no
WHERE to_date = '9999-01-01';

-- 사번, 이름, 연봉, 직무
SELECT e.emp_no, first_name, salary, title
FROM employees e
JOIN salaries s 
ON e.emp_no = s.emp_no
JOIN titles t
ON e.emp_no = t.emp_no;

SELECT * FROM titles;







