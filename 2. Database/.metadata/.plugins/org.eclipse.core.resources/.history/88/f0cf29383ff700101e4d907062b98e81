UPDATE employees
SET first_name = '길동'
WHERE emp_no = 10001;

UPDATE employees
SET last_name = '홍',
	hire_date = now()
WHERE emp_no = 10001;

SELECT * FROM employees WHERE last_name = 'Erie';

